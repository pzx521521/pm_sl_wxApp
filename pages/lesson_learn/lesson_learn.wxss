/* components/lesson-learn/lesson-learn.wxss */
.video-box{
  width: 750rpx;
  height: 421.875rpx;
  /* border: 1px solid black; */
}
.video-box video{
  width: 100%;
  height: 100%;
}
.detail-title {
  /* border: 1px solid black; */
  display: flex;
  align-items: center;
  padding: 24rpx 40rpx 60rpx 40rpx;
  justify-content: space-between;
  font-weight: 200;
}

.detail-title text {
  font-size: 36rpx;
  font-weight: 500;
}

.detail-title-right {
  font-size: 26rpx;
  border: 1px solid rgb(25, 175, 97);
  padding: 2rpx 20rpx;
  border-radius: 24rpx;
  color: rgb(25, 175, 97);
  /* font-weight: bold; */
}

.theand-time {
  /* border: 1px solid black; */
  font-family: 'Arial Normal', 'Arial';
  font-size: 28rpx;
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 19rpx;
}

.theand-first {
  /* border: 1px solid black; */
  padding: 0 0 7rpx 0;
  width: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.theand-first image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 6rpx;
}

.theand-leftname {
  color: #949494;
  margin-right: 20rpx;
}
.gray-wrapper{
  width: 100%;
  height: 20rpx;
  background-color: #f2f2f2;
}

.lesson-bottom{
  font-size: 30rpx;
  color: #000;
}
.item{
  border-bottom: 1px solid #e4e4e4;
  padding: 26rpx 40rpx;
  width: auto;
}
.item-first{
  margin-right: 50rpx;
}
@import "/utils/common.wxss";

.tab-view {
  width: 750rpx;
  height: 80rpx;
  background-color: rgb(245, 245, 245);
  display: flex;
  flex-direction: row;
}

.video-image {
  width: 750rpx;
  height: 400rpx;
  background-color: rgba(0, 0, 0, 0.5);
}

.play-btn {
  display: flex;
  position: absolute;
  top: 400rpx;
  left: 300rpx;
  height: 120rpx;
  width: 120rpx;
}

.tab-btn {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.tab-text {
  margin-top: 20rpx;
  font-size: 28rpx;
}

.tab-text-selected {
  color: #0f3691;
}

.tab-line {
  margin-top: 15rpx;
  width: 80rpx;
  height: 5rpx;
  background-color: #003797;
  opacity: 0;
}

.tab-line-selected {
  opacity: 1;
}

.teacher-container {
  margin-left: 20rpx;
  margin-right: 20rpx;
  background-color: white;
  border-radius: 1rpx;
}

.teacher-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 130rpx;
}

.teacher-top-right {
  margin-left: 10px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.teacher-header {
  margin-left: 10rpx;
  margin-bottom: 5rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.teacher-name {
  font-size: 32rpx;
  width: 400rpx;
}

.teacher-liked {
  margin-top: 10rpx;
  text-align: left;
  font-size: 24rpx;
}

.focus {
  margin-left: 40rpx;
  background-color: #e6ebf8;
  width: 120rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.focus-text-selected {
  color: #0d3691;
  margin-left: 5rpx;
  font-size: 24rpx;
}

.focus-text {
  margin-left: 5rpx;
  font-size: 24rpx;
  color: lightgray;
}

.focus-image {
  width: 35rpx;
  height: 35rpx;
}

.teacher-bottom {
  margin: 20rpx;
  font-size: 24rpx;
}

.header-container {
  display: flex;
  padding: 20rpx;
  flex-direction: column;
}

.intro, .picture-info {
  display: flex;
  flex-direction: column;
}

.course-title {
  margin-top: 20rpx;
  font-size: 36rpx;
  color: #333;
}

.course-type-container {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  align-items: center;
}

.course-type {
  font-size: 24rpx;
  color: white;
  width: 80rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 10rpx;
  background-color: #0f3691;
}

.course-learned {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #969696;
}

.course-date-gap {
  flex: 1;
  display: flex;
}

.course-date {
  font-size: 28rpx;
  color: #969696;
}

.course-price {
  font-size: 38rpx;
  color: #ff3c2d;
  width: 100rpx;
  height: 50rpx;
  margin-bottom: 25rpx;
}

.line-gap {
  width: 750rpx;
  height: 10rpx;
  background-color: #f0f0f0;
}

.bg-text, .target-text, .audiences-text {
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  font-size: 24rpx;
  color: #646464;
}

.detail-image {
  margin-left: 30rpx;
  margin-bottom: 20rpx;
  width: 690rpx;
  height: 400rpx;
}

.comment-cell {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.header {
  margin-left: 30rpx;
  margin-top: 40rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.comment-right-content {
  display: flex;
  margin-top: 40rpx;
  margin-left: 20rpx;
  flex-direction: column;
  flex: 1;
}

.comment-nick-name {
  color: #646464;
  font-size: 24rpx;
  width: 500rpx;
  display: flex;
}

.comment-content {
  margin-top: 20rpx;
  margin-right: 20rpx;
  font-size: 24rpx;
  color: #333;
}

.comment-line {
  margin-top: 30rpx;
  height: 2rpx;
  margin-left: 30rpx;
  width: 720rpx;
  background-color: #dcdcdc;
}

.nav-bar-menu {
  background-color: #003797;
  top: 148rpx;
  width: 750rpx;
  height: 80rpx;
  position: fixed;
  z-index: 10000;
}

.comment-btn {
  margin-left: 650rpx;
  width: 50rpx;
  height: 50rpx;
}

.no-data {
  font-size: 14px;
  text-align: center;
  color: #333;
}

.comment-date {
  float: right;
  margin-top: 10rpx;
  margin-left: 30rpx;
  font-size: 22rpx;
  width: 200rpx;
  color: #646464;
}

.top-content {
  flex-direction: row;
  display: flex;
  height: 50rpx;
  align-items: center;
}

.detail-bottom {
  display: flex;
  height: 80rpx;
  width: 750rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  font-size: 34rpx;
  color: #333;
  align-items: center;
  text-align: center;
  justify-content: center;
}

.detail-bottom-gap {
  height: 80rpx;
}

.detail-video {
  width: 50%;
  height: 100%;
  flex: 1;
  flex-direction: row;
  display: flex;
  align-items: center;
  justify-content: center;
}

.detail-price {
  width: 50%;
  height: 100%;
  background-color: #0d3691;
  color: #fff;
  line-height: 80rpx;
}

.bottom-image {
  width: 40rpx;
  height: 40rpx;
}

.bottom-text {
  margin-left: 20rpx;
}

.comment-count-icon {
  left: 80%;
  position: fixed;
  width: 100rpx;
  height: 80rpx;
}

.comment-count {
  height: 20rpx;
  margin-right: 40rpx;
  line-height: 20rpx;
  color: darkgray;
  font-size: 30rpx;
}

.comment-count-container {
  flex-direction: row;
  align-items: center;
  display: flex;
}

.gap {
  display: flex;
  flex: 1;
}
