@import "/utils/common.wxss";

.bg {
  height: 100vh;
  background-color: rgb(246, 247, 250);
}

.section {
  margin-bottom: 20rpx;
}

.cell {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  padding: 28rpx 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  /* border: 1px solid #eee;
  border-radius: 5rpx;
  box-shadow:0px 0px 20px 0px rgba(26, 53, 140, 0.15); */
}

.cell-left-container, .cell-right-container {
  display: flex;
  align-items: center;
}

.cell-text {
  margin-left: 10rpx;
  font-size: 28rpx;
}

.title-bar-des view, .title-bar-de view {
  display: inline-block;
}

.cell-left-container image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 16rpx;
}

.cell-right-container image {
  width: 12rpx;
  height: 22rpx;
  margin-left: 16rpx;
}

.user-header {
  width: 150rpx;
  height: 150rpx;
  margin-left: 20rpx;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  border-radius: 75rpx;
  border-width: 1rpx;
  border-color: rgb(200, 200, 200);
  border-style: solid;
}

.user-section {
  border: 1px solid #eee;
  margin-bottom: 20rpx;
  box-shadow: 0px 0px 10px 5px #f0f0f0;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  background-color: white;
}

.nick-name-container {
  margin-left: 20rpx;
}

.login-way {
  display: block;
  font-size: 24rpx;
  color: #969696;
}

.nick-name {
  color: #333333;
  font-size: 32rpx;
}