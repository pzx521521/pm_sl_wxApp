@import "/utils/common.wxss";

.banner {
  margin-top: 20rpx;
  height: 400rpx;
}

.banner_img {
  margin-left: 20rpx;
  width: 710rpx;
  height: 400rpx;
  border-radius: 10rpx;
}

.message-container {
  margin: 20rpx;
  background-color: white;
  width: 710rpx;
  height: 200rpx;
}

.message-tab {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  width: 710rpx;
}

.message-tab-item {
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 80rpx;
}

.message-tab-line {
  height: 4rpx;
  width: 100%;
  background-color: #0f3691;
}

.message-tab-text {
  height: 76rpx;
  line-height: 76rpx;
  font-size: 24rpx;
}

.message-tab-text-selected {
  color: #0f3691;
}

.message-content-line {
  height: 1rpx;
  background-color: #dcdcdc;
}

.message-bottom {
  padding: 20rpx;
}

.message-text {
  font-size: 24rpx;
  color: #646464;
}

.teacher-cell {
  width: 750rpx;
  height: 190rpx;
  display: flex;
  flex-direction: row;
}

.teacher-header {
  margin-top: 40rpx;
  margin-left: 20rpx;
  margin-bottom: 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

.teacher-right-content {
  margin-right: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.teacher-row1 {
  display: flex;
  /* margin-top: 40rpx; */
  margin-left: 20rpx;
  flex-direction: row;
  align-items: center;
}

.teacher-name {
  font-size: 24rpx;
  color: #0f3691;
}

.teacher-title {
  margin-left: 20rpx;
  font-size: 22rpx;
  color: #969696;
}

.teacher-row2 {
  display: flex;
  /* margin-top: 10px; */
  margin-left: 20rpx;
  flex-direction: row;
  align-items: center;
}

.teacher-intro {
  font-size: 28rpx;
  color: #333;
}

.teacher-row3 {
  display: flex;
  height: 35rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
  flex-direction: row;
  align-items: center;
}

.teacher-type {
  color: white;
  padding: 0rpx 10rpx;
  border-radius: 5rpx;
  height: 35rpx;
  line-height: 35rpx;
  font-size: 20rpx;
  background-color: #0f3691;
}

.teacher-learned {
  height: 35rpx;
  line-height: 35rpx;
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #969696;
}

.teacher-cell-line {
  display: block;
  margin-left: 20rpx;
  width: 730rpx;
  height: 1rpx;
  background-color: #d2d2d2;
}

.course-content {
  margin: 30rpx 20rpx;
  background-color: white;
  width: 710rpx;
  height: 300rpx;
  border-color: lightgray;
  border-width: 1rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
}

.course-image {
  width: 710rpx;
  height: 240rpx;
}

.course-info {
  flex: 1;
  display: flex;
  height: 60rpx; 
  flex-direction: row;
  align-items: center;
}

.course-titlle {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #333;
}

.course-info-gap {
  flex: 1;
}

.course-learned {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #969696;
}

.course-price {
  font-size: 28rpx;
  margin-right: 20rpx;
  color: #ec5f59;
}

.header-gap {
  height: 20rpx;
}

.scroller {
  flex: 1;
}
