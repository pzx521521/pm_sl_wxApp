@import "/utils/common.wxss";

page {
  flex-direction: row;
}

.left-icon {
  margin-top: 72rpx;
  margin-left: 30rpx;
  width: 44rpx;
  height: 44rpx;
}

.left-menu {
  position:fixed; 
  width: 150rpx; 
  background-color: rgb(245, 245, 245);
}

.right-menu {
  margin-left: 160rpx;
  width: 600rpx;
  height: 100%;
  background-color: white;
}

.category-image {
  margin: 30rpx;
  width: 540rpx;
  height: 180rpx;
}

/* // 0 54 142 */
.category-tab {
  width: 150rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  margin-bottom: 30rpx;
  font-size: 24rpx;
  color: #333333;
}

.category-tab-selected {
  color: white;
  background-color: rgb(0, 54, 142)
}

.category-title {
  font-size: 28rpx;
  margin-left: 30rpx;
}

.tag-btns-container {
  margin-top: 10rpx;
  width: 600rpx;
  display: flex;
  height: 100%;
  flex-direction: row;
  flex-wrap: wrap;
}

.tag-btn {
  display: inline-block;
  width: 80%;
  height: 60rpx; 
  border:1px solid lightgray;
  border-radius: 30rpx;
  text-align: center;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  margin-left: 25rpx;
  font-size: 24rpx;
  line-height: 60rpx;
}